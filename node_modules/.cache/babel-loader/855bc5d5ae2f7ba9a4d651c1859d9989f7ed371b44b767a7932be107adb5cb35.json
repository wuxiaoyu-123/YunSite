r(--primary-color);\n  margin-bottom: 10px;\n}\n\n.stat-label {\n  color: var(--text-secondary);\n  font-size: 1.1em;\n}\n\n@keyframes fadeIn {\n  from { opacity: 0; }\n  to { opacity: 1; }\n}\n\n@media (max-width: 768px) {\n  .intro-text {\n    flex-direction: column;\n    gap: 15px;\n  }\n\n  .intro-text p {\n    width: 100%;\n    text-align: center;\n  }\n\n  .stats-section {\n    flex-direction: column;\n    gap: 30px;\n  }\n}\n\n.thomas-text-container {\n  margin-bottom: 40px;\n}\n\n.thomas-text {\n  position: relative;\n  margin-bottom: 20px;\n  padding: 15px 20px;\n  width: 300px;\n  overflow: hidden;\n  background: rgba(255, 255, 255, 0.05);\n  border-radius: 10px;\n}\n\n.thomas-text span {\n  color: #fff;\n  font-size: 16px;\n  font-family: 'Monaco', monospace;\n  position: relative;\n  z-index: 1;\n}\n\n.light-bar {\n  position: absolute;\n  width: 10px;\n  height: 10px;\n  background: #ffd700;\n  border-radius: 50%;\n  filter: blur(3px);\n  top: 0;\n  left: 0;\n  box-shadow: \n    0 0 5px #ffd700,\n    0 0 10px #ffd700,\n    0 0 20px #ffd700,\n    0 0 40px #ffd700;\n  animation: moveLight 3s linear infinite;\n  opacity: 0.8;\n}\n\n@keyframes moveLight {\n  0% {\n    transform: translate(0, 0);\n  }\n  25% {\n    transform: translate(calc(100% - 10px), 0);\n  }\n  50% {\n    transform: translate(calc(100% - 10px), calc(100% - 10px));\n  }\n  75% {\n    transform: translate(0, calc(100% - 10px));\n  }\n  100% {\n    transform: translate(0, 0);\n  }\n}\n\n/* 为每个文字块设置不同的动画延迟 */\n.thomas-text:nth-child(1) .light-bar {\n  animation-delay: 0s;\n}\n\n.thomas-text:nth-child(2) .light-bar {\n  animation-delay: -1s;\n}\n\n.thomas-text:nth-child(3) .light-bar {\n  animation-delay: -2s;\n}\n\n@media (max-width: 1024px) {\n  .thomas-text {\n    width: 100%;\n    max-width: 300px;\n    margin: 0 auto 20px;\n  }\n}\n</style> "],"mappings":"AAuDA,OAAAA,aAAA;AAEA;EACAC,IAAA;EACAC,UAAA;IACAF;EACA;EACAG,KAAA;IACA;MACAC,aAAA,GACA;QACAC,KAAA;QACAC,KAAA;MACA,GACA;QACAD,KAAA;QAC